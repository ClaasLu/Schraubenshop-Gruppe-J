<UserControl x:Class="Schraubenshop.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schraubenshop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" RenderTransformOrigin="1.168,0.73">
        <Label x:Name="lab_Name" Content="SchraubenShop JJ" HorizontalAlignment="Left" Margin="39,42,0,0" Width="415" Height="72" VerticalAlignment="Top" FontSize="36"/>
        <Image x:Name="img_Logo" Margin="584,0,10,0" Source="LOGO.png" VerticalAlignment="Top" Height="171" />
        <Grid x:Name="grid_Startauswahl" HorizontalAlignment="Left" Height="259" Margin="39,132,0,0" VerticalAlignment="Top" Width="685" RenderTransformOrigin="0.491,0.58" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_Sechskant" HorizontalAlignment="Left" Margin="38,77,0,0" VerticalAlignment="Top" Width="176" Height="137" Click="btn_Sechskant_Click">
                <Image x:Name="img_Sechskant" Source="/Sechskantschraube.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Button x:Name="btn_Zylinderkopf"  HorizontalAlignment="Left" Margin="398,77,0,0" VerticalAlignment="Top" Width="136" Height="137" Click="btn_Zylinderkopf_Click">
                <Image x:Name="Zylinderkopfschraube" Source="Zylinderkopfschraube.png"/>
            </Button>
            <Label Content="Wählen Sie zwischen Sechskant und Zylinderkopf aus." HorizontalAlignment="Left" Margin="99,37,0,0" VerticalAlignment="Top" Height="53" Width="450" FontSize="18"/>
        </Grid>
        <Button x:Name="btn_Exit" Content="Exit" HorizontalAlignment="Left" Margin="654,396,0,0" VerticalAlignment="Top" Width="75" Click="btn_Exit_Click"/>
        <Grid x:Name="grid_Sechskant" HorizontalAlignment="Left" Height="215" Margin="39,176,0,0" VerticalAlignment="Top" Width="685" Focusable="True">
            <Label Content="Kopfhöhe:" HorizontalAlignment="Left" Margin="181,96,0,0" VerticalAlignment="Top" Width="70"/>
            <TextBox x:Name="tb_Kopfhoehe" HorizontalAlignment="Left" Height="23" Margin="271,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Kopfdurchmesser:" HorizontalAlignment="Left" Margin="141,123,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_Kopfdurchmesser" HorizontalAlignment="Left" Height="23" Margin="271,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lab_Gewindedurchmesser" Content="Gewindedurchmesser:" HorizontalAlignment="Left" Margin="125,69,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="cb_Gewindedurchmesser" HorizontalAlignment="Left" Margin="271,69,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Gewindedurchmesser_SelectionChanged">
                <ComboBoxItem Content="M1"/>
                <ComboBoxItem Content="M2"/>
                <ComboBoxItem Content="M3"/>
                <ComboBoxItem Content="M4"/>
                <ComboBoxItem Content="M5"/>
                <ComboBoxItem Content="M6"/>
                <ComboBoxItem Content="M8"/>
                <ComboBoxItem Content="M10"/>
                <ComboBoxItem Content="M12"/>
                <ComboBoxItem Content="M16"/>
                <ComboBoxItem Content="M20"/>
                <ComboBoxItem Content="M24"/>
                <ComboBoxItem Content="M30"/>

            </ComboBox>
            <RadioButton x:Name="Rechtsgewinde" Content="Rechtsgewinde" HorizontalAlignment="Left" Margin="226,39,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="Gewinderichtung"/>
            <RadioButton x:Name="Linksgewinde" Content="Linksgewinde" HorizontalAlignment="Left" Margin="336,39,0,0" VerticalAlignment="Top" GroupName="Gewinderichtung"/>
            <Label x:Name="lab_Gewindelaenge" Content="Gewindelänge:" HorizontalAlignment="Left" Margin="158,152,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_Gewindelaenge" HorizontalAlignment="Left" Height="23" Margin="271,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lab_Material" Content="Material:" HorizontalAlignment="Left" Margin="190,184,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.938"/>
            <ComboBox x:Name="cb_Material" HorizontalAlignment="Left" Margin="271,188,0,0" VerticalAlignment="Top" Width="120">
                <ComboBoxItem Content = "Stahl verz."/>
                <ComboBoxItem Content = "Edelstahl"/>
                <ComboBoxItem Content = "Titan"/>
                <ComboBoxItem Content = "Messing"/>

            </ComboBox>
        </Grid>

        <Grid x:Name="grid_Zylinderkopf" HorizontalAlignment="Left" Height="215" Margin="39,176,0,0" VerticalAlignment="Top" Width="685" Focusable="True" Visibility="Hidden">
            <Label Content="Kopfhöhe:" HorizontalAlignment="Left" Margin="181,96,0,0" VerticalAlignment="Top" Width="70"/>
            <TextBox x:Name="tb_KopfhoeheZk" HorizontalAlignment="Left" Height="23" Margin="271,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Kopfdurchmesser:" HorizontalAlignment="Left" Margin="141,123,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_KopfdurchmesserZk" HorizontalAlignment="Left" Height="23" Margin="271,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lab_GewindedurchmesserZk" Content="Gewindedurchmesser:" HorizontalAlignment="Left" Margin="125,69,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="cb_GewindedurchmesserZk" HorizontalAlignment="Left" Margin="271,69,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Gewindedurchmesser_SelectionChanged">
                <ComboBoxItem Content="M1"/>
                <ComboBoxItem Content="M2"/>
                <ComboBoxItem Content="M3"/>
                <ComboBoxItem Content="M4"/>
                <ComboBoxItem Content="M5"/>
                <ComboBoxItem Content="M6"/>
                <ComboBoxItem Content="M8"/>
                <ComboBoxItem Content="M10"/>
                <ComboBoxItem Content="M12"/>
                <ComboBoxItem Content="M16"/>
                <ComboBoxItem Content="M20"/>
                <ComboBoxItem Content="M24"/>
                <ComboBoxItem Content="M30"/>

            </ComboBox>
            <RadioButton x:Name="RechtsgewindeZk" Content="Rechtsgewinde" HorizontalAlignment="Left" Margin="226,39,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="Gewinderichtung"/>
            <RadioButton x:Name="LinksgewindeZk" Content="Linksgewinde" HorizontalAlignment="Left" Margin="336,39,0,0" VerticalAlignment="Top" GroupName="Gewinderichtung"/>
            <Label x:Name="lab_GewindelaengeZk" Content="Gewindelänge:" HorizontalAlignment="Left" Margin="158,152,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_GewindelaengeZk" HorizontalAlignment="Left" Height="23" Margin="271,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <ComboBox x:Name="cb_MaterialZk" HorizontalAlignment="Left" Margin="271,188,0,0" VerticalAlignment="Top" Width="120">
                <ComboBoxItem Content = "Stahl verz."/>
                <ComboBoxItem Content = "Edelstahl"/>
                <ComboBoxItem Content = "Titan"/>
                <ComboBoxItem Content = "Messing"/>

            </ComboBox>
            <Label x:Name="lab_MaterialZK_" Content="Material:" HorizontalAlignment="Left" Margin="190,188,0,0" VerticalAlignment="Top"/>
        </Grid>



    </Grid>
</UserControl>
